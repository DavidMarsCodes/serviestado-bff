{
  "name": "se-bff-empresas",
  "version": "1.0.0",
  "description": "bff empresas",
  "artifactType": "bff",
  "main": "src/index.js",
  "scripts": {
    "test": "nyc mocha tests/unit/*.spec.js",
    "start": "node src/index.js",
    "local": "(. ./tools/variables_entorno.sh && node src/index.js)",
    "debug": "node --inspect src/index.js",
    "unitTesting": "nyc ava \"tests/unit/*.spec.js\" | sed s/tests\\ passed/passing/g | sed s/tests\\ failed/failing/g",
    "dev": "nodemon src/index.js"
  },
  "author": "celulas empresas <celulas empresas>",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^0.19.2",
    "express": "~4.16.4",
    "express-async-errors": "~3.1.1",
    "helmet": "~3.15.0"
  },
  "devDependencies": {
    "ava": "^2.2.0",
    "chai": "^4.2.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-config-xo": "^0.25.1",
    "eslint-plugin-prettier": "^3.0.1",
    "mocha": "^6.0.2",
    "nodemon": "^2.0.2",
    "nyc": "^14.1.1",
    "prettier": "^1.16.4",
    "proxyquire": "~2.0.1",
    "express-list-endpoints": "^4.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 90,
    "statements": 90,
    "branches": 90,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "test/pruebasUnitarias/*.spec.js"
    ],
    "report-dir": "./coverage"
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  }
}
